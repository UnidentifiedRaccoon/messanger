{
  "name": "messanger",
  "version": "1.0.0",
  "source": "src/index.html",
  "browserslist": [
    "defaults"
  ],
  "description": "",
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=16.0.0"
  },
  "scripts": {
    "start": "npm run build && node index.js",
    "dev": "npm run rm:dist && parcel --port 4000 --open",
    "build": "npm run rm:dist && parcel build --no-source-maps",
    "test": "./node_modules/.bin/mocha",
    "lint": "stylelint ./src/**/*.{css,scss,sass}",
    "eslint": "eslint ./src/**/*{.js,.ts}",
    "fix": "npm run eslint:fix && npm run lint:fix",
    "start_local": "node -r dotenv/config scripts/open.js && node -r dotenv/config index.js",
    "lint:fix": "stylelint ./src/**/*.{css,scss,sass} --fix",
    "eslint:fix": "eslint ./src/**/*{.js,.ts} --fix",
    "rm:dist": "rimraf dist"
  },
  "alias": {
    "components": "./src/components",
    "commonFn": "./src/utils/commonFn",
    "utils": "./src/utils",
    "widgets": "./src//widgets",
    "pages": "./src/pages",
    "modules": "./node_modules"
  },
  "author": "UnidentifiedRaccoon",
  "license": "ISC",
  "devDependencies": {
    "@anikin/parcel-transformer-handlebars-precompile": "1.0.1",
    "@parcel/transformer-inline-string": "2.7.0",
    "@parcel/transformer-sass": "2.7.0",
    "@types/chai": "4.3.3",
    "@types/mocha": "10.0.0",
    "@typescript-eslint/eslint-plugin": "5.39.0",
    "@typescript-eslint/parser": "5.39.0",
    "chai": "4.3.6",
    "dotenv": "16.0.3",
    "eslint": "8.22.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-plugin-import": "2.26.0",
    "gh-pages": "4.0.0",
    "husky": "8.0.1",
    "mocha": "10.1.0",
    "open": "8.4.0",
    "parcel": "2.7.0",
    "parcel-reporter-static-files-copy": "1.4.0",
    "postcss": "8.4.16",
    "postcss-sass": "0.5.0",
    "postcss-scss": "4.0.4",
    "rimraf": "3.0.2",
    "stylelint": "14.11.0",
    "stylelint-config-recess-order": "3.0.0",
    "stylelint-config-standard": "28.0.0",
    "stylelint-order": "5.0.0",
    "stylelint-scss": "4.3.0",
    "ts-node": "10.9.1",
    "typescript": "4.8.4"
  },
  "dependencies": {
    "express": "4.18.1",
    "handlebars": "4.7.7",
    "nanoid": "4.0.0",
    "normalize.css": "8.0.1"
  },
  "staticFiles": {
    "staticPath": "./src/assets/static"
  }
}
