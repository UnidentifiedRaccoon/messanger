{
  "name": "messanger",
  "version": "1.0.0",
  "source": "src/index.html",
  "browserslist": [
    "defaults"
  ],
  "description": "",
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=16.0.0"
  },
  "scripts": {
    "start": "parcel",
    "build": "parcel build --no-source-maps",
    "lint": "stylelint ./src/**/*.{css,scss,sass}",
    "lint:fix": "stylelint ./src/**/*.{css,scss,sass} --fix",
    "eslint": "eslint ./src/**/*{.js,.ts}",
    "eslint:fix": "eslint ./src/**/*{.js,.ts} --fix",
    "publish:gh": "gh-pages --dist dist",
    "publish:netlify": "gh-pages --dist . --branch deploy",
    "deploy:gh": "rm -rf dist && npm run eslint:fix && npm run lint:fix && npm run build && npm run publish:gh",
    "deploy:netlify": "rm -rf dist && npm run eslint:fix && npm run lint:fix && npm run build && npm run publish:netlify"
  },
  "author": "UnidentifiedRaccoon",
  "license": "ISC",
  "devDependencies": {
    "@anikin/parcel-transformer-handlebars-precompile": "1.0.1",
    "@parcel/transformer-sass": "^2.7.0",
    "eslint": "8.22.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "2.26.0",
    "gh-pages": "4.0.0",
    "husky": "8.0.1",
    "parcel": "2.7.0",
    "postcss": "8.4.16",
    "postcss-sass": "0.5.0",
    "postcss-scss": "4.0.4",
    "stylelint": "14.11.0",
    "stylelint-config-recess-order": "3.0.0",
    "stylelint-config-standard": "28.0.0",
    "stylelint-order": "5.0.0",
    "stylelint-scss": "4.3.0"
  },
  "dependencies": {
    "express": "4.18.1",
    "handlebars": "4.7.7",
    "normalize.css": "^8.0.1"
  },
  "eslintConfig": {
    "extends": [
      "eslint-config-airbnb-base"
    ],
    "env": {
      "browser": true
    },
    "rules": {
      "no-console": "warn",
      "prefer-const": "error",
      "quotes": [
        "error",
        "single"
      ],
      "jsx-quotes": [
        "error",
        "prefer-double"
      ],
      "indent": [
        "warn",
        2
      ],
      "max-len": [
        "error",
        {
          "code": 120
        }
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "semi": [
        "warn",
        "always"
      ],
      "import/order": [
        "error",
        {
          "groups": [
            "builtin",
            "external",
            "internal",
            "parent",
            "sibling",
            "index",
            "object",
            "type"
          ],
          "newlines-between": "always-and-inside-groups"
        }
      ]
    }
  },
  "eslintIgnore": [
    "/dist",
    "node_modules"
  ]
}
