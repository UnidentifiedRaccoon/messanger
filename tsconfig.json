{
  "compilerOptions": {

    "outDir": "dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "target": "es2017",
    "declaration": false,
    "module": "commonjs",
    "sourceMap": true,
    "esModuleInterop": true,

    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
  }
}
